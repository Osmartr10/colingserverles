@page "/instituciones"

@inject IInstitucionService servicioInstitucion

<h3>Listar Instituciones</h3>

<div class="form-group row">
    <div class="col-sm-10">
        <a href="/institucion/crear" class="btn btn-primary m-1"></a>
    </div>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th><strong>Nombre Institucion</strong></th>
                <th><strong>Direccion</strong></th>
            </tr>
        </thead>
        @foreach (var item in InstitucionesLista)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Direccion</td>
            </tr>
        }
    </table>
</div>

